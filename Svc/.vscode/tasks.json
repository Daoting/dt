{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cm-local",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Dts.Cm/Dts.Cm.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "cm-k8s",
            "command": "./k8s/debug.ps1",
            "type": "shell",
            "args": [
                "cm"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "auth-k8s",
            "command": "./k8s/debug.ps1",
            "type": "shell",
            "args": [
                "auth"
            ],
            "problemMatcher": []
        }
    ]
}