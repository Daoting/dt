<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0-windows10.0.19041</TargetFramework>
        <Platforms>x64;x86</Platforms>
        <RuntimeIdentifiers>win10-x86;win10-x64</RuntimeIdentifiers>
        <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    </PropertyGroup>

    <PropertyGroup>
        <Version>2.0.0</Version>
        <Authors>Daoting</Authors>
        <Product>搬运工客户端后台任务</Product>
        <Copyright>Copyright © 2021</Copyright>
        <PackageProjectUrl>https://github.com/daoting/dt</PackageProjectUrl>
        <PackageIcon>logo.png</PackageIcon>
        <PackageIconUrl />
        <PackageTags>搬运工 WinUI UWP Uno BackgroundTask</PackageTags>
    </PropertyGroup>
    
    <!-- 包图标 -->
    <ItemGroup>
        <None Include="..\..\logo.png">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>
    
    <!-- CsWinRT properties -->
    <PropertyGroup>
        <CsWinRTComponent>true</CsWinRTComponent>
        <CsWinRTWindowsMetadata>10.0.19041.0</CsWinRTWindowsMetadata>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Windows.CsWinRT" Version="1.4.1" />
    </ItemGroup>

</Project>
