<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <NoWarn>NU1701</NoWarn>

		<!-- 必须sdk完整路径，避免总下载失败 -->
        <NetCoreWasmSDKUri>d:\dt\Package\wasm\dotnet-runtime-wasm-windows-bd114dd-53ca85fb900-1877706367-Sqlite.zip</NetCoreWasmSDKUri>

        <!-- 默认Interpreter -->
        <!--<WasmShellMonoRuntimeExecutionMode>FullAOT</WasmShellMonoRuntimeExecutionMode>-->
    </PropertyGroup>

	<Import Project="..\$ext_safeprojectname$.Client\Stub\Common.props" />

	<ItemGroup>
		<PackageReference Include="Dt.WasmTools" Version="1.3.0" />
		<PackageReference Include="Uno.Wasm.Bootstrap" Version="3.3.1" />
		<PackageReference Include="Uno.Wasm.Bootstrap.DevServer" Version="3.3.1" />
		<ProjectReference Include="..\$ext_safeprojectname$.Client\$ext_safeprojectname$.Client.csproj" />
		
		<!-- 升级wasmsdk压缩包后第一次生成时需要引用该包，生成后将dotnet.js、dotnet.wasm替换wasmsdk压缩包的同名文件，再次build不需引用该包，节约时间 -->
		<!--<PackageReference Include="Uno.sqlite-wasm" Version="3.34.1.3" />-->
	</ItemGroup>

	<ItemGroup>
        <!-- 内容文件输出到 package_xxx 的对应子目录下 -->
        <Content Include="assets\**" />
        <Content Include="..\$ext_safeprojectname$.Win\Images\*.png" Link="images\%(Filename).png" />
        
		<!-- 嵌入资源文件输出到 package_xxx 根目录下，目录名不可修改，uno用 -->
        <EmbeddedResource Include="WasmCSS\*.css" />
        <EmbeddedResource Include="WasmScripts\*.js" />

        <Page Include="..\$ext_safeprojectname$.Win\App.xaml" Link="App.xaml" />
        <Compile Include="..\$ext_safeprojectname$.Win\App.xaml.cs" Link="App.xaml.cs">
            <DependentUpon>App.xaml</DependentUpon>
        </Compile>

        <!-- 生成包时不参加裁剪的dll列表，能够反射出类型的dll都不可裁剪 -->
        <LinkerDescriptor Include="LinkerConfig.xml" />
    </ItemGroup>

	<!-- Debug模式启用调试 -->
	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<MonoRuntimeDebuggerEnabled>true</MonoRuntimeDebuggerEnabled>
		<DefineConstants>$(DefineConstants);TRACE;DEBUG</DefineConstants>
		<DebugType>portable</DebugType>
		<DebugSymbols>true</DebugSymbols>
	</PropertyGroup>

	<!-- PWA相关，只在Release时有效 -->
    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <WasmPWAManifestFile>manifest.json</WasmPWAManifestFile>
    </PropertyGroup>
    <ItemGroup Condition="'$(Configuration)'=='Release'">
        <Content Include="pwa\**" />
    </ItemGroup>
</Project>