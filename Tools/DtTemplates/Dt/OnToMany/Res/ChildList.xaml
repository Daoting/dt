<a:Tab
    x:Class="$rootnamespace$.$parentroot$$childroot$List"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="$childroot$列表">

    <a:Tab.Resources>
        <a:Cols x:Key="TableView">
$lvcols$
        </a:Cols>

        <DataTemplate x:Key="ListView">
$lvtemp$
        </DataTemplate>

        <DataTemplate x:Key="TileView">
$lvtemp$
        </DataTemplate>
    </a:Tab.Resources>

    <a:Tab.Menu>
        <a:Menu>
            <a:Mi ID="增加" Icon="加号" ShowInPhone="Icon" IsEnabled="false" Click="OnAdd" />
            <a:Mi ID="视图" Icon="汉堡">
                <a:Mi ID="列表" IsCheckable="True" Checked="OnListSelected" GroupName="View" />
                <a:Mi ID="表格" IsCheckable="True" Checked="OnTableSelected" IsChecked="True" GroupName="View" />
                <a:Mi ID="平铺" IsCheckable="True" Checked="OnTileSelected" GroupName="View" />
            </a:Mi>
        </a:Menu>
    </a:Tab.Menu>

    <a:Lv x:Name="_lv" View="{StaticResource TableView}" ViewMode="Table" ItemClick="OnItemClick" />
</a:Tab>
