<a:Mv
    x:Class="Dt.Sample.ModuleView.MainForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="编辑主实体">

    <a:Mv.Menu>
        <a:Menu>
            <a:Mi ID="保存" Icon="保存" ShowInPhone="Icon" Click="OnSave" />
            <a:Mi ID="增加" Icon="加号" ShowInPhone="Icon" Click="OnAdd" />
            <a:Mi ID="删除" Icon="删除" Click="OnDel" />
        </a:Menu>
    </a:Mv.Menu>

    <a:Fv x:Name="_fv">
        <a:CText ID="name" Title="名称" />
        <a:CText ID="note" Title="描述" />
    </a:Fv>
</a:Mv>