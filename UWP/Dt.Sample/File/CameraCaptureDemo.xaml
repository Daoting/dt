<a:Win
    x:Class="Dt.Sample.CameraCaptureDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <StackPanel Margin="20">
        <CheckBox x:Name="_cbFront" Content="前置置摄像头" />
        <CheckBox x:Name="_cbSpan" Content="限制录像6秒" />
        <StackPanel Orientation="Horizontal">
            <Button Content="拍照" Click="OnTakePhoto" />
            <Button Content="录像" Click="OnTakeVideo" />
        </StackPanel>
        <Image x:Name="_img" Height="200" />
        <MediaPlayerElement x:Name="_mp" AreTransportControlsEnabled="True" Height="300" />
    </StackPanel>
    
</a:Win>
