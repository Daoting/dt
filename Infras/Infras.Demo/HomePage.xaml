<Page
    x:Class="Infras.Demo.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Background="White" Margin="0,70,0,0" Spacing="20">
        <StackPanel Orientation="Horizontal" Spacing="20">
            <Button Content="空内容" Click="OnBlank" />
            <Button Content="图表" Click="OnChart" />
            <Button Content="xls" Click="OnLoadFile" Tag="MonthProfit.xlsx" />
            <Button Content="xml" Click="OnLoadFile" Tag="MonthProfit.ssxml" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="20">
            <Button Content="分组排序" Click="OnMutiTab" />
            <Button Content="迷你图" Click="OnSparkline" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="20">
            <Button Content="饼图" Click="OnPieStacked" />
            <Button Content="导出打印" Click="OnExportPdf" />
            <TextBlock
                Text="&#xE008;"
                FontFamily="ms-appx:///Assets/Fonts/icon.ttf#DtIcon" />
        </StackPanel>
    </StackPanel>
</Page>