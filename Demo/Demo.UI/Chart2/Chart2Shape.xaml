<a:Win
    x:Class="Demo.UI.Chart2Shape"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Main>
        <a:Tabs>
            <a:Tab Title="图表样例">
                <a:Chart2 x:Name="_c" />
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Order="1" Title="属性">
                <StackPanel>
                    <Button Content="矩形" Click="OnDef" />
                    <Button Content="圆" Click="OnCircle" />
                    <Button Content="椭圆" Click="OnEllipse" />
                    <Button Content="多边形" Click="OnPolygon" />
                </StackPanel>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
