<a:Win
    x:Class="Demo.UI.Chart2Box"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Main>
        <a:Tabs>
            <a:Tab Order="1" Title="图表样例">
                <a:Chart2 x:Name="_c" />
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Order="2" Title="属性">
                <ScrollViewer>
                    <StackPanel>
                        <a:CBar Title="注释" />
                        <StackPanel Orientation="Horizontal">
                            <Button Content="默认注释" Click="OnDefAnnotation" />
                            <Button Content="注释自定义" Click="OnCustomAnnotation" />
                            <Button Content="注释位置" Click="OnAnnotationPos" />
                        </StackPanel>
                        
                    </StackPanel>
                </ScrollViewer>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
