<a:Win
    x:Class="Demo.UI.Chart2Financial"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Main>
        <a:Tabs>
            <a:Tab Title="图表样例">
                <a:Chart2 x:Name="_c" />
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Order="1" Title="属性">
                <StackPanel>
                    <Button Content="蜡烛棒图，矩形表示开盘价和收盘价，&#10;中心线表示给定时间段的最低价和最高价，&#10;颜色表示价格在开盘价和收盘价之间是上涨还是下跌" Click="OnCandlestick" />
                    <Button Content="OHLC图，特定时间范围内的价格数据（开盘价、最高价、最低价和收盘价）" Click="OnOHLC" />
                    <Button Content="任意时间刻度上的价格范围信息" Click="OnFinance" />
                    <Button Content="在右轴上显示价格信息" Click="OnRight" />
                    <Button Content="移动平均线并将其显示在财务数据旁边" Click="OnMoving" />
                    <Button Content="时间序列财务数据的加权移动均值和方差" Click="OnBollinger" />
                    <Button Content="无间隙蜡烛棒图" Click="OnCandlestickNoGap" />
                    <Button Content="无间隙OHLC图" Click="OnOHLCNoGap" />
                </StackPanel>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
