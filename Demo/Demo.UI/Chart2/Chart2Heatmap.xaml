<a:Win
    x:Class="Demo.UI.Chart2Heatmap"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Main>
        <a:Tabs>
            <a:Tab Title="图表样例">
                <a:Chart2 x:Name="_c" />
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Title="属性" Order="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="热图" Click="OnDef" />
                        <Button Content="反转热图" Click="OnReverse" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="自定义颜色热图" Click="OnColor" />
                        <Button Content="多个颜色条" Click="OnMultiColor" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="彩条标题" Click="OnColorTitle" />
                        <Button Content="格式化刻度标签" Click="OnFormatTick" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="水平垂直翻转" Click="OnFlip" />
                        <Button Content="抗锯齿渲染" Click="OnSmooth" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="透明单元格" Click="OnTransparent" />
                        <Button Content="热图透明度" Click="OnOpacity" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Alpha贴图" Click="OnAlphaMap" />
                        <Button Content="无框热图" Click="OnFrameless" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="单元格对齐" Click="OnAlignment" />
                        <Button Content="单元格大小" Click="OnCell" />
                    </StackPanel>
                    <Button Content="颜色值范围" Click="OnManualRange" />
                </StackPanel>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
