<a:Win
    x:Class="Demo.UI.Chart2Ellipse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Main>
        <a:Tabs>
            <a:Tab Title="图表样例">
                <a:Chart2 x:Name="_c" />
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Title="属性" Order="1">
                <StackPanel>
                    <Button Content="椭圆" Click="OnEllipse" />
                    <Button Content="椭圆样式" Click="OnEllipseStyle" />
                    <Button Content="旋转椭圆" Click="OnRotation" />
                    <Button Content="圆" Click="OnCircle" />
                    <Button Content="锁定刻度的圆" Click="OnLockCircle" />
                </StackPanel>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
