<a:Win
    x:Class="Demo.UI.Chart2Pie"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Main>
        <a:Tabs>
            <a:Tab Order="1" Title="图表样例">
                <a:Chart2 x:Name="_c" />
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Order="2" Title="属性">
                <StackPanel>
                    <Button Content="饼图" Click="OnDef" />
                    <Button Content="从PieSlice集合创建饼图" Click="OnList" />
                    <Button Content="中心圆环的饼图" Click="OnDonutFraction" />
                    <Button Content="饼图旋转" Click="OnRotation" />
                    <Button Content="饼图切片标签" Click="OnLabel" />
                    <Button Content="切片的角度是恒定的，半径是值" Click="OnCoxcomb" />
                </StackPanel>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
