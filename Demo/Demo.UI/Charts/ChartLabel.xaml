<a:Win
    x:Class="Demo.UI.ChartLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Win.Resources>
        <DataTemplate x:Key="lbl">
            <TextBlock Text="{Binding}" FontSize="24" Margin="2" />
        </DataTemplate>
    </a:Win.Resources>

    <a:Main>
        <a:Tabs>
            <a:Tab Title="图表样例" Order="1">
                <a:Chart x:Name="_chart" ChartType="Column">
                    <a:Chart.Data>
                        <a:ChartData>
                            <a:DataSeries
                                Label="s1"
                                PointLabelTemplate="{StaticResource lbl}"
                                PointTooltipTemplate="{StaticResource lbl}"
                                Values="3 5 7 4" />
                            <a:DataSeries
                                Label="s2"
                                PointLabelTemplate="{StaticResource lbl}"
                                Values="1 2 3 8" />
                        </a:ChartData>
                    </a:Chart.Data>
                    <a:ChartLegend />
                </a:Chart>
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Title="属性" Order="2">
                <StackPanel>
                    <a:Fv>
                        <a:CFree Title="图表类型">
                            <ComboBox
                                x:Name="_cbType"
                                SelectionChanged="OnChartTypeSelectionChanged" />
                        </a:CFree>
                    </a:Fv>
                </StackPanel>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
