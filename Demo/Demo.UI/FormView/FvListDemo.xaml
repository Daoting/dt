<a:Win
    x:Class="Demo.UI.FvListDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Main>
        <a:Tabs>
            <a:Tab Title="格" Order="1">
                <a:Fv x:Name="_fv">
                    <a:CBar Title="Items" />
                    <a:CList ID="liststr" Title="字符串列表">
                        <a:CList.Items>
                            <x:String>选项一</x:String>
                            <x:String>选项二</x:String>
                            <x:String>选项三</x:String>
                            <x:String>选项四</x:String>
                            <x:String>选项五</x:String>
                            <x:String>选项六</x:String>
                        </a:CList.Items>
                    </a:CList>
                    <a:CList ID="listint" Title="整数列表">
                        <a:CList.Items>
                            <x:Int32>1</x:Int32>
                            <x:Int32>2</x:Int32>
                            <x:Int32>3</x:Int32>
                            <x:Int32>4</x:Int32>
                            <x:Int32>5</x:Int32>
                            <x:Int32>6</x:Int32>
                        </a:CList.Items>
                    </a:CList>
                    <a:CList ID="idstrdsp" Title="IDStr" SrcID="id" TgtID="idstr">
                        <a:CList.Items>
                            <a:IDStr ID="0" Str="选项一" />
                            <a:IDStr ID="1" Str="选项二" />
                            <a:IDStr ID="2" Str="选项三" />
                        </a:CList.Items>
                    </a:CList>

                    <a:CBar Title="枚举" />
                    <a:CList ID="listenum1" Title="自动枚举列表" />
                    <a:CList ID="sex" Title="性别" />
                    <a:CList
                        ID="listenum2"
                        Title="手动设置枚举"
                        Ex="EnumData#Dt.Base.DlgPlacement,Dt.Base" />

                    <a:CBar Title="LoadData" />
                    <a:CList ID="listobj" Title="对象列表" LoadData="OnLoadPersons">
                        <DataTemplate>
                            <Grid Padding="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Background="{StaticResource 主蓝}"
                                    Height="50"
                                    VerticalAlignment="Center"
                                    Width="50">
                                    <TextBlock
                                        Text="&#xE060;"
                                        FontFamily="{StaticResource IconFont}"
                                        FontSize="30"
                                        Foreground="White"
                                        TextAlignment="Center"
                                        VerticalAlignment="Center" />
                                </Border>
                                <StackPanel
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Grid.Column="1">
                                    <a:Dot ID="xm" />
                                    <a:Dot
                                        ID="note"
                                        Call="Def.小灰"
                                        HorizontalAlignment="Left"
                                        MaxHeight="60"
                                        VerticalAlignment="Top" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </a:CList>
                    <a:CList
                        ID="listrow"
                        Title="模拟IDString"
                        SrcID="id"
                        TgtID="listrowid"
                        AfterSelect="OnSelectedRow"
                        LoadData="OnLoadDataTable" />

                    <a:CBar Title="筛选排序" />
                    <a:CList ID="filter" Title="筛选" SrcID="xm" LoadData="OnLoadPerTbl">
                        <a:CList.FilterCfg>
                            <a:FilterCfg
                                EnablePinYin="True"
                                IsRealtime="True"
                                Placeholder="拼音简码或包含的文字" />
                        </a:CList.FilterCfg>
                        <a:Cols>
                            <a:Col ID="bh" Title="编号" Width="80" />
                            <a:Col ID="xm" Title="姓名" />
                            <a:Col ID="hunfou" Title="婚否" Width="60" />
                            <a:Col ID="bumen" Title="所属部门" Width="160" />
                            <a:Col ID="chushengrq" Title="出生日期" />
                            <a:Col ID="shenfenzh" Title="身份证号码" Width="200" />
                            <a:Col ID="xb" Title="性别" Width="60" />
                        </a:Cols>
                    </a:CList>
                    <a:CList ID="order" Title="排序" LoadData="OnLoadPersons">
                        <a:CList.Toolbar>
                            <a:Menu>
                                <a:Mi ID="姓名" CmdParam="xm" />
                                <a:Mi ID="出生日期" CmdParam="chushengrq desc" />
                            </a:Menu>
                        </a:CList.Toolbar>
                    </a:CList>
                    <a:CList ID="order" Title="自定义工具栏" LoadData="OnLoadPersons">
                        <a:CList.Toolbar>
                            <a:Menu>
                                <a:Mi ID="编辑" Click="OnEdit" />
                            </a:Menu>
                        </a:CList.Toolbar>
                    </a:CList>
                    <a:CList
                        ID="filterorder"
                        Title="筛选排序多选"
                        LoadData="OnLoadPersons"
                        SelectionMode="Multiple">
                        <a:CList.FilterCfg>
                            <a:FilterCfg
                                EnablePinYin="True"
                                IsRealtime="True"
                                Placeholder="拼音简码或包含的文字" />
                        </a:CList.FilterCfg>
                        <a:CList.Toolbar>
                            <a:Menu>
                                <a:Mi ID="姓名" CmdParam="xm" />
                                <a:Mi ID="编辑" />
                            </a:Menu>
                        </a:CList.Toolbar>
                    </a:CList>
                </a:Fv>
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Title="属性" Order="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <a:Fv x:Name="_pbFv">
                        <a:CBool
                            ID="IsReadOnly"
                            Title="表单只读"
                            ColSpan="0.5"
                            ShowTitle="False" />
                        <a:CBool
                            ID="IsDesignMode"
                            Title="设计模式"
                            ColSpan="0.5"
                            ShowTitle="False" />
                        <a:CBar Title="单元格" />
                    </a:Fv>
                    <a:Fv x:Name="_pbCell" Grid.Row="1" />
                </Grid>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
