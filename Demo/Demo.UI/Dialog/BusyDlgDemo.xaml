<a:Win
    x:Class="Demo.UI.BusyDlgDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Main>
        <a:Tabs>
            <a:Tab Title="表单" Order="1">
                <a:Fv x:Name="_fv">
                    <a:CBar Background="White" ColSpan="1" RowSpan="-1">
                        <StackPanel>
                            <Grid
                                Background="{StaticResource 浅灰1}"
                                BorderBrush="{StaticResource 浅灰2}"
                                BorderThickness="0,0,0,1"
                                Padding="10,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Text="&#xE02D;"
                                    FontFamily="{StaticResource IconFont}"
                                    Margin="0,0,4,0"
                                    VerticalAlignment="Center" />
                                <TextBlock Text="表格" VerticalAlignment="Center" Grid.Column="1" />
                                <Button
                                    Content="&#xE038;"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource 字符按钮}"
                                    Grid.Column="2" />
                            </Grid>
                            <a:Lv x:Name="_lvTbl" ViewMode="Table">
                                <a:Ex.Menu>
                                    <a:Menu>
                                        <a:Mi ID="删除" Icon="删除" />
                                    </a:Menu>
                                </a:Ex.Menu>
                                <a:Cols>
                                    <a:Col ID="xm" Title="姓名" />
                                    <a:Col ID="bh" Title="编号" Width="80" />
                                </a:Cols>
                            </a:Lv>
                        </StackPanel>
                    </a:CBar>
                    <a:CBar Background="White" ColSpan="1" RowSpan="-1">
                        <StackPanel>
                            <Grid
                                Background="{StaticResource 浅灰1}"
                                BorderBrush="{StaticResource 浅灰2}"
                                BorderThickness="0,0,0,1"
                                Padding="10,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Text="&#xE02D;"
                                    FontFamily="{StaticResource IconFont}"
                                    Margin="0,0,4,0"
                                    VerticalAlignment="Center" />
                                <TextBlock Text="列表" VerticalAlignment="Center" Grid.Column="1" />
                                <Button
                                    Content="&#xE038;"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource 字符按钮}"
                                    Grid.Column="2" />
                            </Grid>
                            <a:Lv x:Name="_lvList">
                                <a:Ex.Menu>
                                    <a:Menu>
                                        <a:Mi ID="删除" Icon="删除" />
                                    </a:Menu>
                                </a:Ex.Menu>
                                <DataTemplate>
                                    <Grid Padding="6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Border
                                            Background="{StaticResource 主蓝}"
                                            Height="50"
                                            VerticalAlignment="Center"
                                            Width="50">
                                            <TextBlock
                                                Text="{Binding Index}"
                                                FontSize="30"
                                                Foreground="White"
                                                TextAlignment="Center"
                                                VerticalAlignment="Center" />
                                        </Border>

                                        <StackPanel
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Grid.Column="1">
                                            <a:Dot ID="xm" />
                                            <StackPanel Orientation="Horizontal">
                                                <a:Dot ID="xb" />
                                                <a:Dot ID="chushengrq" Margin="20,0,0,0" />
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.ColumnSpan="2" Grid.Row="1">
                                            <a:Dot ID="shenfenzh" />
                                            <a:Dot ID="bumen" />
                                            <a:Dot ID="note" Call="Def.小灰" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </a:Lv>
                        </StackPanel>
                    </a:CBar>
                    <a:CBar Background="White" ColSpan="1" RowSpan="-1">
                        <StackPanel>
                            <Grid
                                Background="{StaticResource 浅灰1}"
                                BorderBrush="{StaticResource 浅灰2}"
                                BorderThickness="0,0,0,1"
                                Padding="10,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Text="&#xE02D;"
                                    FontFamily="{StaticResource IconFont}"
                                    Margin="0,0,4,0"
                                    VerticalAlignment="Center" />
                                <TextBlock Text="磁贴" VerticalAlignment="Center" Grid.Column="1" />
                                <Button
                                    Content="&#xE038;"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource 字符按钮}"
                                    Grid.Column="2" />
                            </Grid>
                            <a:Lv x:Name="_lvTile" SelectionMode="None" ViewMode="Tile">
                                <a:Ex.Menu>
                                    <a:Menu>
                                        <a:Mi ID="删除" Icon="删除" />
                                    </a:Menu>
                                </a:Ex.Menu>
                                <DataTemplate>
                                    <a:Dot ID="xm" Margin="10,0,10,0" />
                                </DataTemplate>
                            </a:Lv>
                        </StackPanel>
                    </a:CBar>
                </a:Fv>
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Title="属性" Order="2">
                <a:Fv>
                    <a:CFree Title="提示内容">
                        <TextBox x:Name="_tbMsg" Text="等我三秒..." />
                    </a:CFree>
                    <CheckBox x:Name="_cbVeil" Content="显示遮罩" IsChecked="True" />

                    <Button Content="窗口级等待" Click="OnBusyWin" />
                    <Button Content="最外层Fv级等待" Click="OnBusyFv" />
                    <Button Content="表格级等待" Click="OnBusyTbl" />
                    <Button Content="列表级等待" Click="OnBusyList" />
                    <Button Content="磁贴级等待" Click="OnBusyTile" />
                </a:Fv>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
