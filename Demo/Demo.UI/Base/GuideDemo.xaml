<a:Dlg
    x:Class="Demo.UI.GuideDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Background="{StaticResource 主蓝}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <FlipView x:Name="_fv" Background="Transparent" Margin="20">
            <TextBlock
                Text="第一页"
                FontSize="32"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <TextBlock
                Text="第二页"
                FontSize="32"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <TextBlock
                Text="第三页"
                FontSize="32"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <TextBlock
                Text="请稍等..."
                FontSize="32"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </FlipView>
        <StackPanel
            x:Name="_sp"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Grid.Row="1" />
    </Grid>
</a:Dlg>
