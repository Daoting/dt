<a:Win
    x:Class="Demo.UI.SysButtonDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Win.Resources>
        <Style x:Key="SysButton" TargetType="Button" />
    </a:Win.Resources>

    <StackPanel Margin="20" Spacing="20">
        <Button Content="系统按钮" Style="{StaticResource SysButton}" />
        <Button
            Content="不可用状态"
            IsEnabled="False"
            Style="{StaticResource SysButton}" />
        <Button
            Content="按 钮"
            Background="{StaticResource 主蓝}"
            Foreground="White"
            Style="{StaticResource SysButton}" />
        <HyperlinkButton Content="链接按钮" />
        <ToggleButton Content="ToggleButton" />
        <Image Height="50" Source="ms-appx:///Images/Logo.png" Width="50" />
    </StackPanel>
</a:Win>
