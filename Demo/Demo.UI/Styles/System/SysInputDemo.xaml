<a:Win
    x:Class="Demo.UI.SysInputDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        HorizontalScrollMode="Disabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Auto"
        ZoomMode="Disabled">
        <StackPanel Margin="20" Spacing="20">
            <TextBox x:Name="_tb" Text="默认编辑框" PlaceholderText="默认编辑框" />
            <NumberBox
                Header="NumberBox"
                LargeChange="100"
                SmallChange="10"
                SpinButtonPlacementMode="Inline"
                Value="1" />
            <NumberBox
                AcceptsExpression="True"
                Header="NumberBox自动计算"
                PlaceholderText="1 + 2^2"
                Value="NaN" />
            <CheckBox Content="选择项" />
            <PasswordBox PlaceholderText="密码框" />
            <ComboBox PlaceholderText="选择颜色" Width="200">
                <x:String>Blue</x:String>
                <x:String>Green</x:String>
                <x:String>红</x:String>
                <x:String>Yellow</x:String>
            </ComboBox>
            <RatingControl
                Caption="312 ratings"
                HorizontalAlignment="Left"
                IsClearEnabled="False"
                IsReadOnly="False" />
            <Slider
                HorizontalAlignment="Left"
                LargeChange="100"
                Maximum="1000"
                Minimum="500"
                SmallChange="10"
                StepFrequency="10"
                Value="800"
                Width="300" />
            <ToggleSwitch />
        </StackPanel>
    </ScrollViewer>
</a:Win>
