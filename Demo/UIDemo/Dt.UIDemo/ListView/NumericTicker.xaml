<UserControl x:Class="Dt.UIDemo.NumericTicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20">
        <!-- current value -->
        <TextBlock
          x:Name="_txtValue"
          Text="0.00"
          VerticalAlignment="Center" />

        <!-- percent change -->
        <TextBlock 
          x:Name="_txtChange"
          Text="0.0%"
          Opacity="0.5"
          FontSize="10"
          VerticalAlignment="Center" />

        <!-- up/down arrow -->
        <Polygon
            x:Name="_arrow"
            Points="0,1 .5,0 1,1"
            Margin="3"
            Stretch="UniformToFill"
            Width="12" Height="8">
            <Polygon.RenderTransform>
                <ScaleTransform x:Name="_stArrow" ScaleY="+1" CenterY="4" />
            </Polygon.RenderTransform>
        </Polygon>
        
        <!-- spark line -->
        <Polyline
            x:Name="_sparkLine"
            Points="0,1 .5,0 1,1"
            Margin="3"
            Stretch="UniformToFill"
            Width="24" Height="8"
            Stroke="Blue">
            <Polyline.RenderTransform>
                <ScaleTransform ScaleY="-1" CenterY="4" />
            </Polyline.RenderTransform>
        </Polyline>
    </StackPanel>
</UserControl>
