<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net6.0-android</TargetFramework>
        <SingleProject>true</SingleProject>
        <OutputType>Exe</OutputType>
        <UseInterpreter Condition="'$(Configuration)' == 'Debug'">True</UseInterpreter>
        <IsUnoHead>true</IsUnoHead>
    </PropertyGroup>

    <Import Project="..\Common.props" />
    <Import Project="..\Agent.props" />
    
    <ItemGroup>
        <ProjectReference Include="..\Dt.Base\Dt.Base.csproj" />
        <ProjectReference Include="..\Dt.Mgr\Dt.Mgr.csproj" />
        <ProjectReference Include="..\Dt.Sample\Dt.Sample.csproj" />
    </ItemGroup>

    <ItemGroup>
        <AndroidAsset Include="..\..\Common\Fonts\icon.ttf" Link="Android\Assets\Fonts\icon.ttf" />
        <AndroidAsset Include="..\..\Common\Fonts\uno-fluentui-assets.ttf" Link="Android\Assets\Fonts\uno-fluentui-assets.ttf" />
    </ItemGroup>
    
    <ItemGroup>
        <Page Include="..\Dt.Sample\App\App.xaml" Link="App.xaml" />
        <Compile Include="..\Dt.Sample\App\App.xaml.cs" Link="App.xaml.cs">
            <DependentUpon>App.xaml</DependentUpon>
        </Compile>
    </ItemGroup>
</Project>