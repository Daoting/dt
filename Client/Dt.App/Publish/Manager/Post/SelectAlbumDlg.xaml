<a:Dlg
    x:Class="Dt.App.Publish.SelectAlbumDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="选择专辑">

    <a:Dlg.Menu>
        <a:Menu>
            <a:Mi ID="确认" Icon="正确" Click="OnSelect" />
            <a:Mi ID="增加" Icon="加号" Click="OnAdd" />
        </a:Menu>
    </a:Dlg.Menu>

    <a:Lv x:Name="_lv" ViewMode="Tile" SelectionMode="Multiple">
        <DataTemplate>
            <a:Dot ID="name" Margin="10,0,10,0" />
        </DataTemplate>
    </a:Lv>
</a:Dlg>
