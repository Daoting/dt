<a:Dlg
    x:Class="Dt.App.Workflow.PrcInstDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="流程实例">

    <a:Dlg.Menu>
        <a:Menu x:Name="_m">
            <a:Mi ID="删除" Icon="删除" Click="OnDelInst" IsEnabled="{Binding HasSelected,ElementName=_lv}" />
            <a:Mi ID="全选" Icon="正确" Click="OnSelectAll" />
            <a:Mi ID="清除" Icon="汉堡" Click="OnClearSelection" />
        </a:Menu>
    </a:Dlg.Menu>

    <a:Lv x:Name="_lv" SelectionMode="Multiple">
        <DataTemplate>
            <StackPanel Padding="10">
                <a:Dot ID="name" />
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <a:Dot ID="Status" Foreground="{StaticResource 深灰边框}" FontSize="12" />
                    <a:Dot ID="mtime" Foreground="{StaticResource 深灰边框}" FontSize="12" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </a:Lv>
</a:Dlg>

    