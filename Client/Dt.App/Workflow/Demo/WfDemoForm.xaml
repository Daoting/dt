<a:Win
    x:Class="Dt.App.Workflow.WfDemoForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:WinCenter>
        <a:Tabs>
            <a:Tab x:Name="_tab" Title="主区单视图">
                <a:Tab.Menu>
                    <a:Menu>
                        <a:Mi ID="发送" Icon="发出" Cmd="{Binding CmdSend}" />
                        <a:Mi ID="回退" Icon="追回" Cmd="{Binding CmdRollback}" />
                        <a:Mi ID="签收" Icon="锁卡" Cmd="{Binding CmdAccept}" />
                        <a:Mi ID="保存" Icon="保存" Cmd="{Binding CmdSave}" />
                        <a:Mi ID="撤消" Icon="撤消" Cmd="{Binding CmdUndo,ElementName=_fv}" />
                        <a:Mi ID="删除" Icon="垃圾箱" Cmd="{Binding CmdDelete}" />
                        <a:Mi ID="日志" Icon="审核" Cmd="{Binding CmdLog}" />
                    </a:Menu>
                </a:Tab.Menu>
                <a:Fv x:Name="_fv">
                    <a:CText ID="txt" Title="文本框" />
                </a:Fv>
            </a:Tab>
        </a:Tabs>
    </a:WinCenter>
</a:Win>
