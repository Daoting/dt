<a:Win
    x:Class="Dt.App.Workflow.WfDataList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Pane>
        <a:Tabs>
            <a:Tab Title="任务目录">
                <a:Lv x:Name="_lv" ItemClick="OnItemClick">
                    <DataTemplate>
                        <StackPanel Padding="10">
                            <a:Dot ID="prcname" />
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Border Background="{StaticResource 绿色背景}" Padding="4,2,4,2">
                                    <TextBlock Text="流转中" FontSize="12" Foreground="White" />
                                </Border>
                                <a:Dot ID="active" Foreground="{StaticResource 深灰边框}" Margin="4,0,40,0" />
                                <Border Background="{StaticResource 深灰边框}" Padding="4,2,4,2">
                                    <TextBlock Text="已结束" FontSize="12" Foreground="White" />
                                </Border>
                                <a:Dot ID="finished" Foreground="{StaticResource 深灰边框}" Margin="4,0,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </a:Lv>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
