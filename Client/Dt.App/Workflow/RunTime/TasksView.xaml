<a:Win
    x:Class="Dt.App.Workflow.TasksView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Pane InitWidth="240">
        <a:Tabs>
            <a:Tab Title="功能目录">
                <ScrollViewer>
                    <StackPanel>
                        <a:Lv x:Name="_lv" Style="{StaticResource MainInfoLv}" ItemClick="OnMainInfoClick" />
                        <a:CBar Title="表单查询" Margin="0,-1,0,0" />
                        <a:Lv x:Name="_lvTask" ItemClick="OnTaskItemClick">
                            <DataTemplate>
                                <a:Dot ID="name" Margin="10" />
                            </DataTemplate>
                        </a:Lv>
                    </StackPanel>
                </ScrollViewer>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
