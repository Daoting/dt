<a:Mv
    x:Class="Dt.App.Model.RptForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="报表">

    <a:Mv.Menu>
        <a:Menu>
            <a:Mi ID="保存" Icon="保存" ShowInPhone="Icon" Click="OnSave" />
            <a:Mi ID="增加" Icon="加号" ShowInPhone="Icon" Click="OnAdd" />
            <a:Mi ID="删除" Icon="删除" Click="OnDel" />
        </a:Menu>
    </a:Mv.Menu>

    <a:Fv x:Name="_fv">
        <a:CText ID="name" Title="报表名称" />
        <a:CText ID="note" Title="报表描述" />
        <a:CTip ID="ctime" Title="创建时间" />
        <a:CTip ID="mtime" Title="修改时间" />
        <Button Content="编辑模板" Click="OnEditTemp" HorizontalAlignment="Stretch" />
    </a:Fv>
</a:Mv>