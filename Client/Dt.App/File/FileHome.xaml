<a:Win
    x:Class="Dt.App.File.FileHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Home="最近使用,公共文件,我的文件">

    <a:Pane>
        <a:Tabs>
            <a:Tab x:Name="_tabPub" Title="公共文件" />
        </a:Tabs>
    </a:Pane>
    <a:Main>
        <a:Tabs>
            <a:Tab Title="最近使用">
                <a:Tab.Menu>
                    <a:Menu>
                        <a:Mi ID="清空" Icon="垃圾箱" Click="OnClearHis" />
                    </a:Menu>
                </a:Tab.Menu>
                <a:FileList x:Name="_fl" ColCount="2">
                    <a:Ex.Menu>
                        <a:Menu>
                            <a:Mi ID="分享" Icon="分享" Cmd="{Binding CmdShare}" />
                            <a:Mi ID="保存" Icon="保存" Cmd="{Binding CmdSaveAs}" />
                            <a:Mi ID="删除" Icon="删除" Click="OnDeleteHis" />
                        </a:Menu>
                    </a:Ex.Menu>
                </a:FileList>
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab x:Name="_tabMy" Title="我的文件" />
        </a:Tabs>
    </a:Pane>
</a:Win>
