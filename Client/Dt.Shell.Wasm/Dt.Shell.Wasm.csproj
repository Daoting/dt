<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>net8.0</TargetFrameworks>
        <NoWarn>NU1701</NoWarn>
        <!-- 使用Dt.BuildTools标志 -->
        <UseWasmTools>true</UseWasmTools>
        
        <!-- 必须sdk完整路径，避免总下载失败，实际文件名加后缀 -simd -->
        <NetCoreWasmSDKUri>d:\dt\Packages\wasm\dotnet-runtime-wasm-windows-5708d38-7331dcb60e0-6866112926-Sqlite.zip</NetCoreWasmSDKUri>

        <!-- 默认Interpreter -->
        <!--<WasmShellMonoRuntimeExecutionMode>FullAOT</WasmShellMonoRuntimeExecutionMode>-->
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Uno.Wasm.Bootstrap" Version="8.0.4" />
        <PackageReference Include="Uno.Wasm.Bootstrap.DevServer" Version="8.0.4" />
        <!-- 不引用link出错 -->
        <PackageReference Include="Microsoft.Windows.Compatibility" Version="8.0.0" />
        
        <!-- 升级wasmsdk压缩包后第一次生成时需要引用该包，生成后将dotnet.native.js、dotnet.native.wasm替换wasmsdk压缩包的同名文件，再次build不需引用该包，节约时间 -->
        <!--<PackageReference Include="Uno.sqlite-wasm" Version="3.40.0.1" />-->
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Dt.Core\Dt.Core.csproj" />
        <ProjectReference Include="..\Dt.Base\Dt.Base.csproj" />
        <ProjectReference Include="..\Dt.Mgr\Dt.Mgr.csproj" />
        <ProjectReference Include="..\Dt.MgrDemo\Dt.MgrDemo.csproj" />
        <ProjectReference Include="..\Dt.UIDemo\Dt.UIDemo.csproj" />
    </ItemGroup>

    <ItemGroup>
        <!-- 内容文件输出到 package_xxx 的对应子目录下 -->
        <Content Include="assets\**" />
        <Content Include="..\Dt.Shell.Win\Images\*.png" Link="images\%(Filename).png" />
        <Content Include="..\Dt.Shell.Win\Assets\Lottie\*.json" Link="assets\lottie\%(Filename).json" />

        <!-- 嵌入资源文件输出到 package_xxx 根目录下，目录名不可修改，uno用 -->
        <EmbeddedResource Include="WasmCSS\*.css" />
        <EmbeddedResource Include="WasmScripts\*.js" />

        <Page Include="..\Dt.Shell.Win\App.xaml" Link="App.xaml" />
        <Compile Include="..\Dt.Shell.Win\App.xaml.cs" Link="App.xaml.cs">
            <DependentUpon>App.xaml</DependentUpon>
        </Compile>

        <!-- 生成包时不参加裁剪的dll列表，能够反射出类型的dll都不可裁剪 -->
        <LinkerDescriptor Include="LinkerConfig.xml" />
    </ItemGroup>

    <!-- Debug模式启用调试 -->
    <PropertyGroup Condition="'$(Configuration)'=='Debug'">
        <MonoRuntimeDebuggerEnabled>true</MonoRuntimeDebuggerEnabled>
        <DefineConstants>$(DefineConstants);TRACE;DEBUG</DefineConstants>
        <DebugType>portable</DebugType>
        <DebugSymbols>true</DebugSymbols>
        <!-- 完全禁用链接器，不裁剪dll，生成速度快，裁剪61M，不裁剪82M -->
        <!--<WasmShellILLinkerEnabled>false</WasmShellILLinkerEnabled>-->
    </PropertyGroup>

    <!-- PWA相关，只在Release时有效 -->
    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <WasmPWAManifestFile>pwa/manifest.json</WasmPWAManifestFile>
    </PropertyGroup>
    <ItemGroup Condition="'$(Configuration)'=='Release'">
        <Content Include="pwa\**" Exclude="pwa\manifest.json" />
    </ItemGroup>

    <ItemGroup>
        <Using Remove="Microsoft.AspNetCore.Builder" />
        <Using Remove="Microsoft.AspNetCore.Hosting" />
        <Using Remove="Microsoft.AspNetCore.Http" />
        <Using Remove="Microsoft.AspNetCore.Routing" />
        <Using Remove="Microsoft.Extensions.Configuration" />
        <Using Remove="Microsoft.Extensions.DependencyInjection" />
        <Using Remove="Microsoft.Extensions.Hosting" />
        <Using Remove="Microsoft.Extensions.Logging" />
    </ItemGroup>
</Project>