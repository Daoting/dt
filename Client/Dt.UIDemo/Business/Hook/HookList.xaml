<a:Mv
    x:Class="Dt.Sample.HookList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="列表">

    <a:Mv.Menu>
        <a:Menu>
            <a:Mi ID="增加" Icon="加号" ShowInPhone="Icon" Scope="Phone" Click="OnAdd" />
        </a:Menu>
    </a:Mv.Menu>

    <a:Lv x:Name="_lv" ItemClick="OnItemClick" ViewMode="Table">
        <a:Cols>
            <a:Col ID="MaxLength" Title="限长" Width="80" />
            <a:Col ID="NotNull" Title="不为空" Width="80" />
            <a:Col ID="Src" Title="源" Width="80" />
            <a:Col ID="Tgt" Title="目标" Width="80" />
            <a:Col ID="IsCheck" Title="源不为空" />
            <a:Col ID="NoDelete" Title="禁止删除" />
            <a:Col ID="NoBinding" Title="无UI" Width="80" />
            <a:Col ID="NoHook" Title="后台列" Width="80" />
        </a:Cols>
    </a:Lv>
    
</a:Mv>
