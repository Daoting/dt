<a:Win
    x:Class="Dt.UIDemo.LogDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Fv x:Name="_fv">
        <StackPanel Orientation="Horizontal">
            <Button Content="调试信息" Click="OnDebug" />
            <Button Content="普通信息" Click="OnNormal" />
            <Button Content="含详细内容" Click="OnDetail" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="警告信息" Click="OnWarn" />
            <Button Content="出错信息" Click="OnError" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Http请求响应" Click="OnRequest" />
            <Button Content="Sqlite访问" Click="OnResponse" />
            <Button Content="Push推送" Click="OnPush" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Button Content="消息模板" Click="OnFormat" />
            <Button Content="附加属性" Click="OnAddContext" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="多个附加属性" Click="OnMultiContext" />
            <Button Content="SourceContext附加属性" Click="OnSourceContext" />
        </StackPanel>
    </a:Fv>
</a:Win>
