<UserControl
    x:Class="Bs.Mgr.Home.GroupMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    xmlns:home="using:Bs.Mgr.Home">

    <UserControl.Resources>
        <home:MenuIconConverter x:Key="CvMenuIcon" />
    </UserControl.Resources>
    
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource 浅灰边框}" Height="{StaticResource RowOuterHeight}">
            <TextBlock x:Name="_tb" VerticalAlignment="Center" Margin="20,0,20,0" />
        </Border>
        
        <a:Lv x:Name="_lv" ViewMode="Tile" SelectionMode="None" ItemClick="OnItemClick" ItemHeight="80" Grid.Row="1">
            <DataTemplate>
                <Grid Padding="10">
                    <StackPanel VerticalAlignment="Center">
                        <!--uno无法用ContentPresenter-->
                        <ContentControl Content="{Binding Data.Icon,Converter={StaticResource CvMenuIcon},Mode=OneTime}" HorizontalContentAlignment="Center" />
                        <TextBlock Text="{Binding Data.Name,Mode=OneTime}" TextAlignment="Center" />
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </a:Lv>
    </Grid>
</UserControl>
