<UserControl
    x:Class="Bs.Mgr.Home.RootMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    xmlns:home="using:Bs.Mgr.Home">

    <UserControl.Resources>
        <home:MenuIconConverter x:Key="CvMenuIcon" />
        <home:MenuWarningConverter x:Key="CvMenuWarning" />
    </UserControl.Resources>
    
    <a:Lv x:Name="_lv" ViewMode="Tile" SelectionMode="None" ItemClick="OnItemClick" ItemHeight="80">
        <DataTemplate>
            <Grid Padding="10">
                <StackPanel VerticalAlignment="Center">
                    <!--uno无法用ContentPresenter-->
                    <ContentControl Content="{Binding Data.Icon,Converter={StaticResource CvMenuIcon},Mode=OneTime}" HorizontalContentAlignment="Center" />
                    <TextBlock Text="{Binding Data.Name,Mode=OneTime}" TextAlignment="Center" />
                </StackPanel>
                <ContentControl Content="{Binding Data.Warning,Converter={StaticResource CvMenuWarning}}" HorizontalAlignment="Right" VerticalAlignment="Top" />
            </Grid>
        </DataTemplate>
    </a:Lv>
</UserControl>
