<a:Dlg
    x:Class="Dt.Base.FormView.ImageBoxDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Dlg.Menu>
        <a:Menu DataContext="{Binding ElementName=_fl}">
            <a:Mi ID="更新" Icon="刷新" Cmd="{Binding CmdAddImage}" />
            <a:Mi ID="另存为" Icon="保存" />
            <a:Mi ID="删除" Icon="垃圾箱" />
        </a:Menu>
    </a:Dlg.Menu>
    
    <ScrollViewer HorizontalScrollMode="Disabled" HorizontalScrollBarVisibility="Disabled" VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto">
        <a:FileList x:Name="_fl" UploadFinished="OnUploadFinished" />
    </ScrollViewer>
</a:Dlg>
