<a:Dlg
    x:Class="Dt.Base.ListView.PullToRefreshDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <Grid>
        <Border x:Name="_bd"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="White"
                BorderThickness="2"
                BorderBrush="{StaticResource 浅灰1}"
                Height="40"
                Width="40"
                CornerRadius="20">
            <Border x:Name="_bdChild" BorderThickness="2" BorderBrush="{StaticResource 中灰2}" CornerRadius="18">
                <TextBlock x:Name="_tb"
                       Text="&#xE00F;"
                       FontFamily="{StaticResource IconFont}"
                       FontSize="20"
                       Foreground="{StaticResource 中灰2}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </Border>
        </Border>
    </Grid>
</a:Dlg>
