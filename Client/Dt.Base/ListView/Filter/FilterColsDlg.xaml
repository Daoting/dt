<a:Dlg
    x:Class="Dt.Base.ListView.FilterColsDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="选择筛选列">

    <a:Dlg.Menu>
        <a:Menu>
            <a:Mi ID="全选" Icon="全选" Call="OnSelectAll" />
            <a:Mi ID="清空" Icon="取消选择" Call="OnClearAll" />
        </a:Menu>
    </a:Dlg.Menu>

    <a:Lv x:Name="_lv" ItemClick="OnItemClick">
        <a:Cols>
            <a:Col ID="ischecked" Title="选择" Width="60" />
            <a:Col ID="title" Title="列名" Width="250" />
        </a:Cols>
    </a:Lv>
</a:Dlg>
