<a:Tab
    x:Class="Dt.Base.Report.ParamsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="参数列表">

    <a:Tab.Menu>
        <a:Menu>
            <a:Mi ID="增加" Icon="加号" ShowInPhone="Icon" Call="OnAdd" />
            <a:Mi ID="删除" Icon="删除" Call="OnDel" />
        </a:Menu>
    </a:Tab.Menu>
    <a:Lv x:Name="_lv" SelectionChanged="OnSelectionChanged" ItemDoubleClick="OnItemDbClick">
        <a:Cols>
            <a:Col ID="name" Title="参数名称" Width="240" />
            <a:Col ID="type" Title="参数类型" />
            <a:Col ID="val" Title="缺省值" Width="200" />
            <a:Col ID="note" Title="备注" Width="*" />
        </a:Cols>
    </a:Lv>
</a:Tab>
