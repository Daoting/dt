<a:Dlg
    x:Class="Dt.Base.Views.OneToManyDesign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="一对多视图参数">

    <a:Dlg.Menu>
        <a:Menu>
            <a:Mi ID="保存" Icon="保存" Click="OnOK" ShowInPhone="Icon" />
        </a:Menu>
    </a:Dlg.Menu>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <a:Fv x:Name="_fv">
            <a:CTip ID="父实体" Click="OnEditParent" />
            <a:CBar Title="子实体">
                <Button
                    Content="+添加"
                    Click="OnAddChild"
                    HorizontalAlignment="Right" />
            </a:CBar>
        </a:Fv>
        <a:Lv x:Name="_lv" Grid.Row="1">
            <a:Cols>
                <a:Col ID="Cls" Title="实体类全名" Width="150" />
                <a:Col ID="ParentID" Title="父表主键字段名" Width="*" />
            </a:Cols>
        </a:Lv>
    </Grid>
</a:Dlg>