<a:Dlg
    x:Class="Dt.Base.Views.RelatedEntityDesign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="实体设计">
    <a:Dlg.Menu>
        <a:Menu>
            <a:Mi ID="确定" Icon="保存" Click="OnOK" ShowInPhone="Icon" />
        </a:Menu>
    </a:Dlg.Menu>

    <a:Fv x:Name="_fv">
        <a:CList
            ID="RelatedCls"
            Title="关联实体类型"
            SrcID="cls"
            Changed="OnClsChanged"
            GroupName="group"
            LoadData="OnLoadEntityCls">
            <DataTemplate>
                <StackPanel Margin="10">
                    <a:Dot ID="cls" />
                    <a:Dot ID="tbl" Call="Def.小灰" />
                </StackPanel>
            </DataTemplate>
        </a:CList>
        <a:CList
            ID="MiddleCls"
            Title="中间实体类型"
            SrcID="cls"
            Changed="OnClsChanged"
            GroupName="group"
            LoadData="OnLoadEntityCls">
            <DataTemplate>
                <StackPanel Margin="10">
                    <a:Dot ID="cls" />
                    <a:Dot ID="tbl" Call="Def.小灰" />
                </StackPanel>
            </DataTemplate>
        </a:CList>
        <a:CList ID="MainFk" Title="主表外键" LoadData="OnLoadKeyCols" />
        <a:CList ID="RelatedFk" Title="关联表外键" LoadData="OnLoadKeyCols" />
        <a:CText ID="TabTitle" Title="Tab标题" />
        <a:CText ID="SelectDlgTitle" Title="对话框标题" />
        <a:CBar ColSpan="0.25">
            <TextBlock Text="显示菜单项" />
        </a:CBar>
        <a:CBool ID="ShowAddMi" Title="增加" ColSpan="0.25" ShowTitle="False" />
        <a:CBool ID="ShowDelMi" Title="删除" ColSpan="0.25" ShowTitle="False" />
        <a:CBool
            ID="ShowMultiSelMi"
            Title="多选"
            ColSpan="0.25"
            ShowTitle="False" />
        <a:CBar Title="列表Xaml">
            <Button
                Content="设计"
                Click="EditListXaml"
                HorizontalAlignment="Right" />
        </a:CBar>
        <a:CText
            ID="ListXaml"
            AcceptsReturn="True"
            Placeholder="Xaml空时自动生成"
            RowSpan="4"
            ShowTitle="False" />
    </a:Fv>
</a:Dlg>