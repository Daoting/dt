<a:Tab
    x:Class="Dt.Base.Tools.HistoryLogList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="日志列表">

    <a:Tab.Menu>
        <a:Menu>
            <a:Mi ID="本应用日志" Icon="选日" Click="OnSelectSelf" />
            <a:Mi ID="其它位置" Icon="文件夹" Click="OnOpenFile" />
            <a:Mi
                ID="其它应用"
                Icon="应用"
                Click="OnSelectOther"
                Visibility="Collapsed" />
        </a:Menu>
    </a:Tab.Menu>
    <Grid RowDefinitions="Auto,*">
        <StackPanel
            Background="{StaticResource 浅灰1}"
            BorderBrush="{StaticResource 浅灰2}"
            BorderThickness="0,0,0,1"
            Orientation="Horizontal"
            Padding="10,0,10,0"
            Spacing="20">
            <Button
                Content="&#xE02B;"
                Click="OnFirstPage"
                Style="{StaticResource 字符按钮}" />
            <Button
                Content="&#xE010;"
                Click="OnPrePage"
                Style="{StaticResource 字符按钮}" />
            <TextBox x:Name="_tbPageNum" Text="0" KeyUp="OnNumKeyUp" />
            <TextBlock
                x:Name="_tbTotalPage"
                Text="/ 0 页"
                VerticalAlignment="Center" />
            <Button
                Content="&#xE011;"
                Click="OnNextPage"
                Style="{StaticResource 字符按钮}" />
            <Button
                Content="&#xE030;"
                Click="OnLastPage"
                Style="{StaticResource 字符按钮}" />
            <TextBlock
                x:Name="_tbTotalRow"
                Text="❌ 未加载日志文件"
                VerticalAlignment="Center" />
        </StackPanel>
        <a:Lv x:Name="_lv" ItemClick="OnOutputClick" Grid.Row="1">
            <DataTemplate>
                <a:Dot Call="HisLogStyle.FormatItem" Padding="6" />
            </DataTemplate>
        </a:Lv>
    </Grid>
</a:Tab>