<a:Tab
    x:Class="Dt.Base.Tools.DbInit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="数据库操作">

    <a:Fv x:Name="_fv">
        <a:CText ID="NewDb" Title="库名" />
        <a:CText ID="NewUser" Title="用户名" />
        <a:CPassword ID="NewPwd" Title="密码" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="_btnCreate"
                Content="创　建　新　库"
                Background="{StaticResource 主蓝}"
                Click="OnCreate"
                HorizontalAlignment="Stretch"
                Style="{StaticResource 浅色按钮}" />
            <Button
                x:Name="_btnDel"
                Content="删　　除　　库"
                Background="Red"
                Click="OnDelete"
                HorizontalAlignment="Stretch"
                Style="{StaticResource 浅色按钮}"
                Grid.Column="1" />
        </Grid>
        <Button
            x:Name="_btnConn"
            Content="连　接　库　导　入"
            Background="Green"
            Click="OnConnect"
            HorizontalAlignment="Stretch"
            Style="{StaticResource 浅色按钮}" />
        <a:CFree ColSpan="0" RowSpan="3" ShowTitle="False">
            <TextBox
                x:Name="_tbInfo"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollMode="Enabled" />
        </a:CFree>
    </a:Fv>
</a:Tab>