<a:Tab
    x:Class="Dt.Base.FuzzySearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <Grid x:Name="_grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto"
            Grid.Row="1">
            <StackPanel x:Name="_sp">
                <a:Lv
                    x:Name="_lvFix"
                    BorderBrush="{StaticResource 浅灰2}"
                    BorderThickness="0,1,0,0"
                    ItemClick="OnFixClick"
                    ItemHeight="50"
                    SelectionMode="None"
                    ViewMode="Tile">
                    <DataTemplate>
                        <a:Dot
                            Foreground="{StaticResource 主蓝}"
                            HorizontalAlignment="Center" />
                    </DataTemplate>
                </a:Lv>
                <a:CBar Title="搜索历史" Margin="0,10,0,0">
                    <Button
                        Content="&#xE00A;"
                        Click="OnClearHis"
                        HorizontalAlignment="Right"
                        Style="{StaticResource 字符按钮}" />
                </a:CBar>
                <a:Lv x:Name="_lvHis" ItemClick="OnHisClick">
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <a:Dot ID="Content" Foreground="{StaticResource 主蓝}" />
                            <Button
                                Content="&#xE009;"
                                Click="OnDelHis"
                                Style="{StaticResource 字符按钮}"
                                Grid.Column="1" />
                        </Grid>
                    </DataTemplate>
                </a:Lv>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</a:Tab>
