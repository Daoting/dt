<a:Dlg
    x:Class="Dt.Base.PrivacyDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <ScrollViewer HorizontalScrollMode="Disabled">
        <StackPanel Padding="20">
            <TextBlock
                x:Name="_tbTitle"
                FontSize="24"
                FontWeight="Bold"
                TextAlignment="Center" />
            <TextBlock
                x:Name="_tbUpdate"
                FontWeight="Bold"
                Margin="0,10,0,10"
                TextAlignment="Right" />
            <TextBlock x:Name="_tbContent" TextWrapping="Wrap" />
            <TextBlock
                x:Name="_tbApp"
                FontWeight="Bold"
                Margin="0,20,0,0"
                TextAlignment="Right" />
            <TextBlock x:Name="_tbCompany" FontWeight="Bold" TextAlignment="Right" />
        </StackPanel>
    </ScrollViewer>
</a:Dlg>