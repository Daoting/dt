<a:NaviWin
    x:Class="Dt.Zend.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    x:Name="_win"
    NaviWidth="400">

    <a:NaviWin.Menu>
        <a:Menu>
            <a:Mi ID="保存" Icon="保存" />
            <a:Mi ID="搜索" Icon="搜索" />
        </a:Menu>
    </a:NaviWin.Menu>
    
    <StackPanel>
        <a:BtnItem Icon="个人信息" Title="页面窗口" Desc="右侧加载页面窗口内容" Click="OnNavi" Cls="Dt.Sample.PageWinDemo" />
        <a:BtnItem Icon="备注" Title="普通窗口" Desc="右侧加载普通窗口内容" Click="OnNavi" Cls="Dt.Sample.WinDemo" />
        <a:BtnItem Icon="排列" Title="导航栏数据" Desc="左侧导航栏自动加载导航项" Click="OnNaviData" />
        <CheckBox Content="隐藏标题栏" IsChecked="{Binding HideTitleBar,Mode=TwoWay,ElementName=_win}" />
    </StackPanel>
</a:NaviWin>
