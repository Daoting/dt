<a:Win
    x:Class="Dt.Kehu.PtStep1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="训练前评估表">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <a:Fv x:Name="_fv">
            <a:CText ID="txt" Title="收缩压（mmHg）" />
            <a:CText ID="txtlong" Title="舒张压（mmHg）" />
            <a:CText ID="txtpy" Title="心跳（次/分钟）" />
        </a:Fv>
        <Button Content="下一步" Click="OnNext" Background="{StaticResource 主题蓝色}" Foreground="White" HorizontalAlignment="Stretch" Grid.Row="1"/>
    </Grid>
</a:Win>
