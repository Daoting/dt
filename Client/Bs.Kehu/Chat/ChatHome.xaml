<UserControl
    x:Class="Dt.Kehu.ChatHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Lv x:Name="_lv">
        <a:Ex.Menu>
            <a:Menu>
                <a:Mi ID="清空聊天" Icon="删除" />
                <a:Mi ID="置顶" Icon="向上" />
                <a:Mi ID="置底" Icon="向下" />
            </a:Menu>
        </a:Ex.Menu>
        <DataTemplate>
            <Grid Padding="10" Height="80">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--<Image Source="{Binding Data[icon]}" Width="50" Height="50" Margin="0,0,10,0" Stretch="Uniform" />-->
                <StackPanel VerticalAlignment="Center" Grid.Column="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <a:Dot ID="name" />
                        <!--<Ellipse Visibility="{Binding Data[unread], Converter={StaticResource CvBoolToVisible}}" Fill="Red" Height="8" Width="8" Margin="4,4,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" />-->
                        <a:Dot ID="stime" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" />
                    </Grid>
                    <TextBlock Text="{Binding [msg]}" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Foreground="{StaticResource 深灰边框}" FontSize="12" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </a:Lv>
</UserControl>
