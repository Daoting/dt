<a:Win
    x:Class="Dt.Kehu.DefaultHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    xmlns:home="using:Dt.Kehu"
    AutoSaveLayout="False"
    Home="百岁,关心,我的">

    <a:WinItem DockState="DockedLeft">
        <a:Tabs>
            <a:Tab Title="百岁" Icon="主页" HideTitleBar="True">
                <home:MainPage x:Name="_mainPage" />
            </a:Tab>
            <a:Tab Title="关心" Icon="心电">
                <a:Tab.Menu>
                    <a:Menu>
                        <a:Mi ID="增加" Icon="加号" Click="OnAddFriend" ShowInPhone="Icon" />
                    </a:Menu>
                </a:Tab.Menu>
                <home:ChatHome x:Name="_chat" />
            </a:Tab>
        </a:Tabs>
    </a:WinItem>
    <!--<a:WinCenter>
        <a:Tabs>
            <a:Tab Title="福袋" Icon="购物车">
                
            </a:Tab>
        </a:Tabs>
    </a:WinCenter>-->
    <a:WinItem DockState="DockedRight">
        <a:Tabs>
            <a:Tab Title="我的" Icon="个人信息"  HideTitleBar="True">
                <home:MyMain x:Name="_myMain" />
            </a:Tab>
        </a:Tabs>
    </a:WinItem>
</a:Win>
