<a:PageWin
    x:Class="Dt.Kehu.FollowList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="关注">

    <a:Lv x:Name="_lv">
        <DataTemplate>
            <Grid Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image Source="{Binding Data[AuthorIcon]}" Width="50" Height="50" Margin="0,0,10,0" Stretch="Uniform" />
                <StackPanel VerticalAlignment="Center" Grid.Column="1">
                    <a:Dot ID="AuthorName" />
                    <TextBlock Text="高级介护师" Foreground="{StaticResource 深灰边框}" FontSize="12" />
                </StackPanel>
                <Button Content="已关注" Grid.Column="2" />
            </Grid>
        </DataTemplate>
    </a:Lv>
</a:PageWin>
