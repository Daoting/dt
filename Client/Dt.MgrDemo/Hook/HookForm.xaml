<a:Mv
    x:Class="Dt.MgrDemo.Hook.HookForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="表单">

    <a:Mv.Menu>
        <a:Menu>
            <a:Mi ID="保存" Icon="保存" Click="OnSave" IsEnabled="{Binding IsDirty,ElementName=_fv}" />
            <a:Mi ID="增加" Icon="加号" Click="OnAdd" />
            <a:Mi ID="删除" Icon="删除" Click="OnDel" />
        </a:Menu>
    </a:Mv.Menu>

    <a:Fv x:Name="_fv">
        <a:CTip ID="ID" Title="标识" />
        <a:CText ID="MaxLength" Title="最大长度3" />
        <a:CText ID="NotNull" Title="不为空" />
        <a:CText ID="Src" Title="联动源" />
        <a:CTip ID="Tgt" Title="联动目标" />
        <a:CBool ID="IsCheck" Title="联动源不为空" />
        <a:CBool ID="NoDelete" Title="禁止删除" />
        <Button Content="修改未与UI绑定但有Hook的Cell" Click="OnNoBinding" />
        <Button Content="修改无UI无Hook的Cell" Click="OnNoHook" />
    </a:Fv>
</a:Mv>
