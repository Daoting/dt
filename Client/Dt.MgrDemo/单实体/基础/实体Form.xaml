<a:Tab
    x:Class="Dt.MgrDemo.实体Form"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="表单">

    <a:Tab.Menu>
        <a:Menu>
            <a:Mi ID="保存" Icon="保存" ShowInPhone="Icon" Call="Save" IsEnabled="{Binding IsDirty,ElementName=_fv}" />
            <a:Mi ID="增加" Icon="加号" ShowInPhone="Icon" Call="Create" />
            <a:Mi ID="删除" Icon="删除" Call="Delete" />
        </a:Menu>
    </a:Tab.Menu>

    <a:Fv x:Name="_fv" Save="Save" Create="Create" Delete="Delete">
        <a:CNum ID="序列" IsInteger="True" />
        <a:CText ID="限长4" />
        <a:CText ID="不重复" />
        <a:CBool ID="禁止选中" />
        <a:CBool ID="禁止保存" />
        <a:CBool ID="禁止删除" />
        <a:CText ID="值变事件" />
        <a:CDate ID="创建时间" />
        <a:CDate ID="修改时间" />
    </a:Fv>
</a:Tab>