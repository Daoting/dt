<a:Tab
    x:Class="Dt.MgrDemo.单实体.实体Query"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="查询">

    <a:QueryFv x:Name="_fv">
        <a:CNum ID="序列" IsInteger="True" Query="Editable" />
        <a:CText ID="限长4" Query="Editable" />
        <a:CText ID="不重复" Query="Editable" />
        <a:CBool ID="禁止选中" Query="Editable" />
        <a:CNum ID="校验后台列" IsInteger="True" Query="Editable" />
        <a:CBool ID="禁止保存" Query="Editable" />
        <a:CBool ID="禁止删除" Query="Editable" />
        <a:CText ID="值变事件" Query="Editable" />
        <a:CDate ID="创建时间" Query="Editable" />
        <a:CDate ID="修改时间" Query="Editable" />
        <a:CBar />
        <a:CBar>
            <Grid ColumnDefinitions="*,*">
                <Button Content="重置" Command="{Binding CmdReset,ElementName=_fv}" HorizontalAlignment="Stretch" />
                <Button Content="查询" Command="{Binding CmdQuery,ElementName=_fv}" HorizontalAlignment="Stretch" Grid.Column="1" />
            </Grid>
        </a:CBar>
    </a:QueryFv>
</a:Tab>