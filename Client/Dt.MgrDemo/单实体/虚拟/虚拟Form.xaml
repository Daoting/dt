            <a:Mi ID="删除" Icon="删除" Click="OnDel" />
        </a:Menu>
    </a:Tab.Menu>

    <a:Fv x:Name="_fv">
        <a:CText ID="主表名称" />
        <a:CText ID="限长4" />
        <a:CText ID="不重复" />
        <a:CText ID="扩展1名称" />
        <a:CBool ID="禁止选中" />
        <a:CBool ID="禁止保存" />
        <a:CText ID="扩展2名称" />
        <a:CBool ID="禁止删除" />
        <a:CText ID="值变事件" />
    </a:Fv>
</a:Tab>