<a:Tab
    x:Class="Dt.MgrDemo.多对多.角色Query"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="查询">

    <a:QueryFv x:Name="_fv">
        <a:CText ID="角色名称" Query="Editable" />
        <a:CText ID="角色描述" Query="Editable" />
        <CheckBox Content="筛选条件之间【与】关系" IsChecked="{Binding IsAnd,ElementName=_fv,Mode=TwoWay}" />
        <a:CBar />
        <a:CBar>
            <Grid ColumnDefinitions="*,*">
                <Button Content="重置" Command="{Binding CmdReset,ElementName=_fv}" HorizontalAlignment="Stretch" />
                <Button Content="查询" Command="{Binding CmdQuery,ElementName=_fv}" HorizontalAlignment="Stretch" Grid.Column="1" />
            </Grid>
        </a:CBar>
    </a:QueryFv>
</a:Tab>