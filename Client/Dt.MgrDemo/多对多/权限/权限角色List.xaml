<a:Tab
    x:Class="Dt.MgrDemo.多对多.权限角色List"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="角色列表">

    <a:Tab.Resources>
        <a:Cols x:Key="TableView">
            <a:Col ID="角色名称" />
            <a:Col ID="角色描述" />
        </a:Cols>

        <DataTemplate x:Key="ListView">
            <StackPanel Padding="10">
                <a:Dot ID="角色名称" />
                <a:Dot ID="角色描述" />
            </StackPanel>
        </DataTemplate>
    </a:Tab.Resources>
    
    <a:Tab.Menu>
        <a:Menu>
            <a:Mi ID="添加" Icon="加号" ShowInPhone="Icon" IsEnabled="false" Click="OnAdd" />
            <a:Mi ID="删除" Icon="垃圾箱" Click="OnDel" Visibility="Collapsed" IsEnabled="{Binding HasSelected,ElementName=_lv}" />
            <a:Mi ID="全选" Icon="正确" Click="OnSelectAll" Visibility="Collapsed" />
            <a:Mi ID="选择" Icon="全选" Click="OnMultiMode" />
            <a:Mi ID="取消" Icon="全选" Click="OnCancelMulti" Visibility="Collapsed" />
            <a:Mi x:Name="_mi" ID="列表" Icon="列表" ShowInPhone="Icon" Click="OnToggleView" />
        </a:Menu>
    </a:Tab.Menu>

    <a:Lv x:Name="_lv">
        <a:Ex.Menu>
            <a:Menu>
                <a:Mi ID="删除" Icon="垃圾箱" Click="OnDel" />
            </a:Menu>
        </a:Ex.Menu>
    </a:Lv>
</a:Tab>
