<a:Tree
    x:Class="Dt.Mgr.Rbac.MenuTree"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="菜单树">

    <a:Tab.Menu>
        <a:Menu>
            <a:Mi ID="更新缓存" Icon="刷新" Click="OnRefresh" />
        </a:Menu>
    </a:Tab.Menu>

    <a:Tv x:Name="_tv">
        <DataTemplate>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE067;" FontFamily="{StaticResource IconFont}" Margin="4,0,4,0" VerticalAlignment="Center" />
                <a:Dot ID="name" />
            </StackPanel>
        </DataTemplate>
    </a:Tv>
</a:Tree>
