<a:Tab
    x:Class="Dt.Mgr.Rbac.UserQuery"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="查询">

    <Grid RowDefinitions="*,Auto">
        <a:QueryFv x:Name="_fv">
            <a:CText ID="Phone" Title="手机号，唯一" Query="Editable" />
            <a:CText ID="Name" Title="姓名" Query="Editable" />
            <a:CText ID="Pwd" Title="密码的md5" Query="Editable" />
            <a:CList ID="Sex" Title="性别" Query="Editable" />
            <a:CText ID="Photo" Title="头像" Query="Editable" />
            <a:CBool ID="Expired" Title="是否停用" Query="Editable" />
            <a:CDate ID="Ctime" Title="创建时间" Query="Editable" />
            <a:CDate ID="Mtime" Title="修改时间" Query="Editable" />
            <CheckBox Content="筛选条件之间【与】关系" IsChecked="{Binding IsAnd,ElementName=_fv,Mode=TwoWay}" />
        </a:QueryFv>
        <Grid ColumnDefinitions="*,*" Margin="20" Grid.Row="1">
            <Button Content="重置" Command="{Binding CmdReset,ElementName=_fv}" Style="{StaticResource 浅色按钮}" Background="{StaticResource 深灰2}" HorizontalAlignment="Stretch" />
            <Button Content="查询" Command="{Binding CmdQuery,ElementName=_fv}" Style="{StaticResource 浅色按钮}" Background="{StaticResource 亮红}" HorizontalAlignment="Stretch" Grid.Column="1" />
        </Grid>
    </Grid>
</a:Tab>