<a:LvTab
    x:Class="Dt.Mgr.Module.RptList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="报表目录">

    <a:Tab.Menu>
        <a:Menu>
            <a:Mi ID="增加" Icon="加号" ShowInPhone="Icon" Click="OnAdd" />
            <a:Mi ID="更新缓存" Icon="刷新" Click="OnRefresh" />
        </a:Menu>
    </a:Tab.Menu>

    <a:Lv x:Name="_lv" SelectionChanged="OnSelectionChanged" ItemDoubleClick="OnItemDbClick">
        <a:Ex.Menu>
            <a:Menu>
                <a:Mi ID="修改名称" Icon="修改" Click="OnEdit" />
                <a:Mi ID="删除" Icon="删除" Click="OnDel" />
                <a:Mi ID="编辑模板" Icon="修改" Click="OnEditTemp" />
            </a:Menu>
        </a:Ex.Menu>
        <a:Cols>
            <a:Col ID="name" Title="报表名称" Width="300" />
            <a:Col ID="note" Title="报表描述" Width="*" />
            <a:Col ID="ctime" Title="创建时间" />
            <a:Col ID="mtime" Title="修改时间" />
        </a:Cols>
    </a:Lv>
</a:LvTab>
