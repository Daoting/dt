<a:Tab
    x:Class="Dt.Mgr.Module.ParamsForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="编辑参数">

    <a:Tab.Menu>
        <a:Menu>
            <a:Mi ID="保存" Icon="保存" ShowInPhone="Icon" Click="OnSave" IsEnabled="{Binding IsDirty,ElementName=_fv}" />
            <a:Mi ID="增加" Icon="加号" ShowInPhone="Icon" Click="OnAdd" />
            <a:Mi ID="删除" Icon="删除" Click="OnDel" />
        </a:Menu>
    </a:Tab.Menu>

    <a:Fv x:Name="_fv">
        <a:CText ID="Name" Title="参数名称" />
        <a:CText ID="Value" Title="参数缺省值" />
        <a:CText ID="Note" Title="参数描述" AcceptsReturn="True" RowSpan="2" />
        <a:CTip ID="Ctime" Title="创建时间" />
        <a:CTip ID="Mtime" Title="修改时间" />
    </a:Fv>
</a:Tab>