<a:Win
    x:Class="Dt.Mgr.Module.OptionGroupWin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    xmlns:l="using:Dt.Mgr.Module">

    <a:FuzzySearch x:Name="_query" Search="OnSearch" a:Ex.Dock="Left" Order="1">
        <x:String>全部</x:String>
    </a:FuzzySearch>
    <l:OptionGroupList x:Name="_parentList" />
    <a:Tabs a:Ex.Dock="Bottom">
        <l:OptionGroupOptionList x:Name="_optionList" a:Ex.Dock="Bottom" />
    </a:Tabs>
</a:Win>
