<a:Tab
    x:Class="Dt.Mgr.Module.OptionGroupForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="选项分组">

    <a:Tab.Menu>
        <a:Menu>
            <a:Mi ID="保存" Icon="保存" ShowInPhone="Icon" Click="OnSave" IsEnabled="{Binding IsDirty,ElementName=_fv}" />
            <a:Mi ID="增加" Icon="加号" ShowInPhone="Icon" Click="OnAdd" />
            <a:Mi ID="删除" Icon="删除" Click="OnDel" />
        </a:Menu>
    </a:Tab.Menu>

    <a:Fv x:Name="_fv">
        <a:CText ID="Name" Title="分组名称" />
    </a:Fv>
</a:Tab>