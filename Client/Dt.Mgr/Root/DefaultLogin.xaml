<Page
    x:Class="Dt.Mgr.DefaultLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Foreground="White">

    <Page.Resources>
        <Style x:Key="LoginButton" TargetType="Button">
            <Setter Property="FontSize" Value="{StaticResource 默认字}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="Background" Value="{StaticResource 深暗遮罩}" />
            <Setter Property="Padding" Value="10,7,10,7" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <!-- 标题 -->
        <Grid
            Background="Transparent"
            DoubleTapped="OnShowTrace"
            HorizontalAlignment="Center"
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Height="50" Source="ms-appx:///Images/Logo.png" Width="50" />
            <TextBlock
                x:Name="_tbTitle"
                FontSize="{StaticResource 特大字}"
                Margin="5,8,5,8"
                Grid.Column="1" />
        </Grid>

        <Grid
            x:Name="InfoPanel"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Collapsed"
            Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ProgressRing
                Background="{StaticResource 主蓝}"
                Foreground="White"
                Height="40"
                IsActive="True"
                Width="40" />
            <TextBlock Text="正在登录..." Margin="10" TextWrapping="Wrap" Grid.Row="1" />
        </Grid>

        <StackPanel
            x:Name="LoginPanel"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="2">
            <TextBox
                x:Name="_tbPhone"
                KeyUp="OnPhoneKeyUp"
                PlaceholderText="账号或手机号" />
            <PasswordBox
                x:Name="_tbPwd"
                KeyUp="OnPwdKeyUp"
                Margin="0,10,0,0"
                PlaceholderText="密码" />
            <Grid x:Name="_pnlCode" Margin="0,10,0,0" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="_tbCode" InputScope="Number" PlaceholderText="验证码" />
                <Button
                    x:Name="_btnCode"
                    Content="获取验证码"
                    Click="OnGetCode"
                    Margin="10,0,0,0"
                    Style="{StaticResource LoginButton}"
                    Grid.Column="1" />
            </Grid>
            <Button
                Content="登　　录"
                Click="OnLoginClick"
                HorizontalAlignment="Stretch"
                Margin="0,20,0,20"
                Style="{StaticResource LoginButton}" />
            <HyperlinkButton Content="手机验证码登录" Click="OnTogglePwd" Foreground="White" />
        </StackPanel>
    </Grid>
</Page>
