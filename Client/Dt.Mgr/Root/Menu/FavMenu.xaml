<a:Tab
    x:Class="Dt.Mgr.Home.FavMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="收藏"
    Icon="收藏">

    <a:Tab.Menu>
        <a:Menu>
            <a:Mi ID="搜索" Icon="搜索" ShowInPhone="Icon" Call="OnSearch" />
            <a:Mi ID="所有" Icon="汉堡" Call="OnAllMenu" />
        </a:Menu>
    </a:Tab.Menu>
    
    <a:Lv x:Name="_lv" ViewMode="Tile" SelectionMode="None" ItemClick="OnItemClick">
        <a:Ex.Menu>
            <a:Menu Opening="OnMenuOpening">
                <a:Mi ID="置顶" Icon="上传" Click="OnTop" />
                <a:Mi ID="置底" Icon="下载" Click="OnBottom" />
                <a:Mi ID="取消收藏" Icon="收藏" Click="OnDelFav" />
            </a:Menu>
        </a:Ex.Menu>
        <DataTemplate>
            <Grid Padding="12">
                <StackPanel VerticalAlignment="Center">
                    <a:Dot ID="Icon" Call="Def.Icon" FontSize="30" Foreground="{StaticResource 主蓝}" Margin="0,0,0,4" HorizontalAlignment="Center" />
                    <a:Dot ID="Name" HorizontalAlignment="Center" />
                </StackPanel>
                <a:Dot ID="Warning" Call="Def.Warning" HorizontalAlignment="Right" VerticalAlignment="Top" />
            </Grid>
        </DataTemplate>
    </a:Lv>
</a:Tab>
