<a:Win
    x:Class="Dt.Sample.RpcDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Fv x:Name="_fv">
        <a:CBar Title="请求/响应模式" />
        <StackPanel Orientation="Horizontal">
            <Button Content="GetString" Click="OnGetString" />
            <Button Content="SetString" Click="OnSetString" />
        </StackPanel>

        <a:CBar Title="流模式" />
        <StackPanel Orientation="Horizontal">
            <Button Content="启动ServerStream" Click="OnServerStream" />
            <Button Content="停止ServerStream" Click="OnStopStream" />
        </StackPanel>
        <a:CFree RowSpan="8" ShowTitle="False">
            <TextBox x:Name="_tbInfo"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     ScrollViewer.VerticalScrollMode="Enabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto" />
        </a:CFree>
    </a:Fv>
</a:Win>
