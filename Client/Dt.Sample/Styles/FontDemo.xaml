<a:Win
    x:Class="Dt.Sample.FontDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:a="using:Dt.Base">

    <ScrollViewer HorizontalScrollMode="Disabled"
                  HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollMode="Auto"
                  VerticalScrollBarVisibility="Auto"
                  ZoomMode="Disabled">
        <StackPanel Margin="20" Spacing="20">
            <TextBlock Text="常用字大小" />
            <TextBlock Text="标题字：20px，小三，窗口页面标题用" FontSize="{StaticResource 标题字}" />
            <TextBlock Text="默认字：16px，小四，xaml中不需要指定FontSize" />
            <TextBlock Text="小字：14px，五号，说明性文字用" FontSize="{StaticResource 小字}" />
            <TextBlock Text="小灰：深灰214px，常用文字样式" Style="{StaticResource 小灰}" />
            
            <TextBlock Text="不常用" Margin="0,20,0,0" />
            <TextBlock Text="特小字：12px，小五，辅助说明文字用" FontSize="{StaticResource 特小字}" />
            <TextBlock Text="大字：24px，小二，需要大字体醒目文字用" FontSize="{StaticResource 大字}" />
            <TextBlock Text="特大字：32px，小一，使用场景少" FontSize="{StaticResource 特大字}" />
        </StackPanel>
    </ScrollViewer>
</a:Win>
