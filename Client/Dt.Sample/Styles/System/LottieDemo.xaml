<a:Win
    x:Class="Dt.Sample.LottieDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    xmlns:skia="using:SkiaSharp.Views.Windows">

    <StackPanel Spacing="20">
        <TextBlock Text="Android中json文件必须放在Assets目录下，路径中不包括Assets，如 ms-appx:///Lottie/xx.json" TextWrapping="Wrap" Margin="10,0,10,0" />
        <StackPanel Orientation="Horizontal" Spacing="20">
            <Button Content="上一幅" Click="OnPreview" />
            <Button Content="下一幅" Click="OnNext" />
            <TextBlock x:Name="_tb" VerticalAlignment="Center" />
        </StackPanel>
        <AnimatedVisualPlayer x:Name="_player" />
    </StackPanel>
</a:Win>
