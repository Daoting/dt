<a:Win
    x:Class="Dt.Sample.SysButtonDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Win.Resources>
        <Style x:Key="SysButton" TargetType="Button" />
    </a:Win.Resources>

    <StackPanel Margin="20" Spacing="20">
        <Button Content="系统按钮" Style="{StaticResource SysButton}" />
        <Button Content="不可用状态" IsEnabled="False" Style="{StaticResource SysButton}" />
        <Button Content="按 钮" Foreground="White" Background="{StaticResource 主蓝}" Style="{StaticResource SysButton}" />
        <HyperlinkButton Content="链接按钮" />
        <ToggleButton Content="ToggleButton" />
        <Image Source="ms-appx:///Assets/logo.png" Stretch="None" />
    </StackPanel>
</a:Win>
