<a:Win
    x:Class="Dt.Sample.TvDynamicLoading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Home="树,属性">

    <a:WinCenter>
        <a:Tabs>
            <a:Tab Title="树">
                <a:Tv x:Name="_tv" IsDynamicLoading="True">
                    <DataTemplate>
                        <a:Dot ID="name" />
                    </DataTemplate>
                </a:Tv>
            </a:Tab>
        </a:Tabs>
    </a:WinCenter>
    <a:WinItem DockState="DockedRight">
        <a:Tabs>
            <a:Tab Title="属性">
                <a:Fv>
                    <Button Content="折叠所有节点" Click="OnCollapseAll" />
                </a:Fv>
            </a:Tab>
        </a:Tabs>
    </a:WinItem>
</a:Win>
