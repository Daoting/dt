<a:PageWin
    x:Class="Dt.Sample.PageWinDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    x:Name="_win">

    <a:PageWin.Menu>
        <a:Menu>
            <a:Mi ID="保存" Icon="保存" />
            <a:Mi ID="搜索" Icon="搜索" />
        </a:Menu>
    </a:PageWin.Menu>

    <StackPanel Spacing="10" Margin="10">
        <TextBox Text="{Binding Title,Mode=TwoWay,ElementName=_win}" />
        <Button Content="切换图标" Click="OnToggleIcon" />
        <Button Content="子窗口" Click="OnNewWin" />
        <Button Content="参数子窗口" Click="OnParamsWin" />
        <CheckBox Content="隐藏标题栏" IsChecked="{Binding HideTitleBar,Mode=TwoWay,ElementName=_win}" />
        <CheckBox x:Name="_cbClosing" Content="禁止关闭" />
    </StackPanel>
</a:PageWin>
