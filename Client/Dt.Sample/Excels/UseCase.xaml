<a:Win
    x:Class="Dt.Sample.UseCase"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Home="Excel,属性">

    <a:WinCenter>
        <a:Tabs>
            <a:Tab Title="Excel">
                <a:Excel x:Name="_excel" />
            </a:Tab>
        </a:Tabs>
    </a:WinCenter>
    <a:WinItem DockState="DockedRight">
        <a:Tabs>
            <a:Tab Title="属性">
                <a:Fv>
                    <Button Content="月报" Click="OnMonthProfit" />
                    <Button Content="课程表" Click="OnStudentCalendar" />
                    <Button Content="表单" Click="OnTaxForm" />
                    <Button Content="结婚预算" Click="OnWedding" />
                    <Button Content="汽车维修跟踪" Click="OnCarRepairTracker" />
                    <Button Content="消费趋势预算" Click="OnExpense" />
                    <Button Content="按条件格式化" Click="OnConditionalFormat" />
                    <Button Content="导出Xls" Click="SaveExcelFile" />
                    <Button Content="导出Xml" Click="SaveXmlFile" />
                    <Button Content="另存为PDF" Click="SavePDFFile" />
                </a:Fv>
            </a:Tab>
        </a:Tabs>
    </a:WinItem>
</a:Win>
