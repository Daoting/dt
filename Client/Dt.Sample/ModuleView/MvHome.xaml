<a:Win
    x:Class="Dt.Sample.MvHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Pane InitWidth="150">
        <a:Tabs>
            <a:Tab Title="功能列表">
                <a:Lv x:Name="_lv" ItemClick="OnMainInfoClick">
                    <DataTemplate>
                        <a:Dot ID="Title" Padding="10" />
                    </DataTemplate>
                </a:Lv>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
