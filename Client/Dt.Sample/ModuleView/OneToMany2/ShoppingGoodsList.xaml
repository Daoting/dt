<a:Mv
    x:Class="Dt.Sample.ModuleView.OneToMany2.ShoppingGoodsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    xmlns:l="using:Dt.Sample.ModuleView.OneToMany2"
    Title="商品列表">

    <a:Mv.Menu>
        <a:Menu>
            <a:Mi ID="添加" Icon="加号" Click="OnAdd" IsEnabled="False" />
        </a:Menu>
    </a:Mv.Menu>

    <a:Lv x:Name="_lv">
        <a:Ex.Menu>
            <a:Menu>
                <a:Mi ID="编辑" Icon="编辑" Click="OnEdit" />
                <a:Mi ID="删除" Icon="删除" Click="OnDel" />
            </a:Menu>
        </a:Ex.Menu>
        <DataTemplate>
            <a:Dot ID="name" Margin="10,0,10,0" />
        </DataTemplate>
    </a:Lv>
</a:Mv>