<a:Mv
    x:Class="Dt.Sample.SearchMvItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Title="搜索导航">

    <a:Mv.Menu>
        <a:Menu>
            <a:Mi ID="搜索" Icon="搜索" ShowInPhone="Icon" Click="OnForwardSearch" />
        </a:Menu>
    </a:Mv.Menu>

    <StackPanel Margin="10" Spacing="10">
        <Button Content="对话框含搜索面板" Click="OnDlgMv" />
        <Button Content="对话框含搜索菜单" Click="OnDlgMenu" />
    </StackPanel>
</a:Mv>
