<a:Win
    x:Class="Dt.Sample.MarkersChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base">

    <a:Main>
        <a:Tabs>
            <a:Tab Order="1" Title="图表样例">
                <a:Chart x:Name="_chart" />
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Order="2" Title="属性">
                <StackPanel>
                    <a:Fv>
                        <a:CFree Title="跟踪方式">
                            <ComboBox x:Name="_cbAttach" />
                        </a:CFree>
                        <a:CFree Title="图表类型">
                            <ComboBox x:Name="_cbType" />
                        </a:CFree>
                    </a:Fv>
                </StackPanel>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
