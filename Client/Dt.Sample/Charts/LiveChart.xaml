<a:Win
    x:Class="Dt.Sample.LiveChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Home="图表样例,属性">

    <a:Main>
        <a:Tabs>
            <a:Tab Title="图表样例">
                <a:Chart x:Name="_chart" Palette="Civic">
                    <a:ChartLegend x:Name="_legend" />
                </a:Chart>
            </a:Tab>
        </a:Tabs>
    </a:Main>
    <a:Pane Pos="Right">
        <a:Tabs>
            <a:Tab Title="属性">
                <StackPanel>
                    <a:Fv>
                        <Button x:Name="btnTimer" Content="Stop" Click="Button_Click" />
                    </a:Fv>
                </StackPanel>
            </a:Tab>
        </a:Tabs>
    </a:Pane>
</a:Win>
