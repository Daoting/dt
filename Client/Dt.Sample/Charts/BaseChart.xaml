<a:Win
    x:Class="Dt.Sample.BaseChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Dt.Base"
    Home="图表样例,属性">

    <a:WinCenter>
        <a:Tabs>
            <a:Tab Title="图表样例">
                <a:Chart x:Name="_chart" Palette="Flow">
                    <a:ChartLegend x:Name="_legend" />
                </a:Chart>
            </a:Tab>
        </a:Tabs>
    </a:WinCenter>
    <a:WinItem DockState="DockedRight">
        <a:Tabs>
            <a:Tab Title="属性">
                <StackPanel>
                    <a:Fv Data="{Binding ElementName=_chart}">
                        <a:CBar Title="图表属性" />
                        <a:CFree Title="图表类型">
                            <ComboBox x:Name="_cbType" />
                        </a:CFree>
                        <a:CList ID="Theme" Title="主题样式" />
                        <a:CList ID="Palette" Title="调色板" />
                        <a:CText ID="Header" Title="大标题" />
                    </a:Fv>
                </StackPanel>
            </a:Tab>
        </a:Tabs>
    </a:WinItem>
</a:Win>
